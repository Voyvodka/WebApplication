@model UserSignUpViewModel
@{Layout = "_AuthLayout";}
<div class="container-fluid">
  <div class="p-10">
    <img alt="logo" class="h-20px h-lg-30px theme-light-show d-inline" src="/assets/media/logos/demo43.svg"/>
  </div>
  <div class="d-flex justify-content-center align-items-center" style="min-height:80vh;">
    <form method="post" class="card-p d-flex flex-column col-12 col-sm-9 col-md-7 col-lg-5 col-xl-4">
      @Html.AntiForgeryToken()
      <div class="my-3">
        <h1 class="fs-2qx mb-3">Kayıt Ol</h1>
        <h5 class="mb-3 fw-normal fs-6">Hoşgeldin <i class="fa-solid fa-hand text-warning"></i></h5>
      </div>
      <div class="my-3">
        <div class="mb-3">
          <label class="mb-1 fs-6 form-label required" for="username">Kullanıcı Adı</label>
          <input class="form-control" required type="text" asp-for="@Model.Username" id="username" placeholder="Kullanıcı adı giriniz"/>
        </div>
        <div class="mb-3">
          <label class="mb-1 fs-6 form-label required" for="email">Email</label>
          <input class="form-control" required type="email" asp-for="@Model.Email" id="email" placeholder="Email adresinizi giriniz"/>
        </div>
        <div class="mb-3">
          <label class="mb-1 fs-6 form-label required" for="password">Şifre</label>
          <input class="form-control" required type="password"asp-for="@Model.Password" id="password" placeholder="Şifrenizi Giriniz"/>
        </div>
         <div class="mb-3">
          <label class="mb-1 fs-6 form-label required" for="confirmpassword">Şifre Tekrar</label>
          <input class="form-control" required type="password" asp-for="@Model.ConfirmPassword" id="confirmpassword" placeholder="Şifrenizi Tekrar Giriniz"/>
        </div>
      </div>
      <div class="my-3">
        <button type="submit" class="btn btn-primary text-dark w-100 fw-bolder" style="color:white !important;">Kayıt Ol</button>
      </div>
      <div class="my-3">
        <div class="d-flex justify-content-center">
          Zaten bir hesabınız var mı??&nbsp;<a asp-controller="Auth" asp-action="Login">Giriş Yap <i class="fa-solid fa-arrow-trend-up"></i></a>
        </div>
      </div>
      <div class="my-3">
        <div class="d-flex justify-content-center text-gray-700">
          Tüm hakları saklıdır.
        </div>
      </div>
    </form>
  </div>
</div>
