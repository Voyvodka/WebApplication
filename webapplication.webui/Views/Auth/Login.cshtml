@{Layout = "_AuthLayout";}
@model UserSignInViewModel
<div class="container-fluid">
  <div class="p-10">
    <img alt="logo" class="h-20px h-lg-30px theme-light-show d-inline" src="/assets/media/logos/demo43.svg"/>
  </div>
  <div class="d-flex justify-content-center align-items-center" style="min-height:80vh;">
    <form method="post" class="card-p d-flex flex-column col-12 col-sm-9 col-md-7 col-lg-5 col-xl-4">
      @Html.AntiForgeryToken()
      <div class="my-3">
        <h1 class="fs-2qx mb-3">Giriş Yap</h1>
        <h5 class="mb-3 fw-normal fs-6">Merhaba, Tekrar Hoşgeldin <i class="fa-solid fa-hand text-warning"></i></h5>
      </div>
      <div class="my-3">
        <a asp-controller="Auth" asp-action="GoogleLogin" asp-route-provider="Google" class="mb-3 btn btn-flex btn-outline border border-1 border-gray-400 text-dark fw-bolder btn-active-color-primary bg-state-light flex-center text-nowrap w-100">
            <img alt="Logo" src="/assets/media/svg/brand-logos/google-icon.svg" class="h-15px me-3">   
            Google ile Giriş Yap
        </a>
      </div>
      <div class="separator separator-content my-14 border-primary">
        <span class="w-300px text-gray-700 fw-semibold fs-7">veya Email ile Giriş Yap</span>
      </div>
      <div class="my-3">
        <div class="mb-3">
          <label class="mb-1 fs-6 form-label" for="email">Email</label>
          <input class="form-control" required type="email"  asp-for="@Model.Email" id="email" placeholder="Email adresinizi giriniz"/>
        </div>
        <div class="mb-3">
          <label class="mb-1 fs-6 form-label" for="password">Şifre</label>
          <input class="form-control" required type="password" asp-for="@Model.Password" id="password" placeholder="Şifrenizi Giriniz"/>
        </div>
      </div>
      <div class="my-3 d-flex justify-content-between">
        <div class="d-flex">
          <div class="form-check form-check-custom form-check-primary form-check-solid">
              <input class="form-check-input" id="rememberme" type="checkbox" asp-for="@Model.RememberMe" checked />
              <label class="form-check-label text-gray-700" for="rememberme">
                  Beni Hatırla
              </label>
          </div>
        </div>
        <a clas="d-flex" style="align-self:center;" href="/sifremi-unuttum">Şifremi Unuttum</a>
      </div>
      <div class="my-3">
        <button type="submit" class="btn btn-primary text-dark w-100 fw-bolder" style="color:white !important;">Giriş Yap</button>
      </div>
      <div class="my-3">
        <div class="d-flex justify-content-center">
          Henüz üyeliğiniz yok mu?&nbsp;<a asp-controller="Auth" asp-action="Register">Hemen yeni hesap oluştur <i class="fa-solid fa-arrow-trend-up"></i></a>
        </div>
      </div>
      <div class="my-3">
        <div class="d-flex justify-content-center text-gray-700">
          Tüm hakları saklıdır.
        </div>
      </div>
    </form>
  </div>
</div>